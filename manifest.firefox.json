{
  "manifest_version": 3,
  "name": "FontBlitz - Font Changer",
  "version": "1.0.0",
  "author": "Filip Vitas",
  "description": "A browser extension for instantly switching and testing fonts on any website.",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "FontBlitz",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["tabs", "scripting", "storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@fontblitz.com",
      "strict_min_version": "115.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
