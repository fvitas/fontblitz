{
  "manifest_version": 3,
  "name": "Font Switcher",
  "version": "0.0.0",
  "author": "Filip Vitas",
  "description": "",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Font Switcher",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@fontswitcher.com",
      "strict_min_version": "109.0"
    },
    "gecko_android": {
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "permissions": ["tabs", "scripting", "fontSettings"]
}
